<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeadlineVisualizer.MainPage"
             xmlns:res="clr-namespace:DeadlineVisualizer.Resources">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Spacing="15">
            <Label Text="{x:Static res:AppRes.CurrentFile}" HorizontalOptions="Start" FontAttributes="Bold"/>
            <Label Text="{Binding CurrentFileName}" HorizontalOptions="Start" FontAttributes="Italic"/>
        </HorizontalStackLayout>
        
        <VerticalStackLayout Spacing="15" Grid.Row="1" Grid.Column="0">
            <Button Text="{x:Static res:AppRes.NewFileButtonText}" Clicked="NewButton_Clicked"/>
            <Button Text="{x:Static res:AppRes.OpenFileButtonText}" Clicked="OpenButton_Clicked"/>
            <Button Text="{x:Static res:AppRes.SaveFileButtonText}" Clicked="SaveButton_Clicked"/>
            <Button Text="{x:Static res:AppRes.SaveFileAsButtonText}" Clicked="SaveAsButton_Clicked"/>
            <Button Text="+" Command="{Binding AddMilestoneCommand}" WidthRequest="50" HeightRequest="50" Margin="30" CornerRadius="200"/>
        </VerticalStackLayout>
    </Grid>
    

</ContentPage>
