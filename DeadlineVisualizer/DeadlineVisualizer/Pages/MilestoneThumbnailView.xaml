<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeadlineVisualizer.MilestoneThumbnailView">
    <Border Margin="2">
        <Grid Background="{Binding Milestone.Color}" ToolTipProperties.Text="{Binding Milestone.Notes}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Milestone.Title}" HorizontalOptions="Start" FontAttributes="Bold" FontSize="12"/>
            <Label Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding Milestone.Deadline, StringFormat='{0:yyyy-MM-dd}'}" HorizontalOptions="Start" FontSize="10" />
            <Button Scale="0.5" BackgroundColor="AliceBlue" Grid.Row="2" Grid.Column="0" Text="✎" Command="{Binding EditCommand}" CommandParameter="{Binding .}"  HorizontalOptions="Start" />
            <Button Scale="0.5" BackgroundColor="AliceBlue" Grid.Row="2" Grid.Column="1" Text="❌" Command="{Binding RemoveCommand}" CommandParameter="{Binding .}"  HorizontalOptions="Start" />
        </Grid>
        <!--<VerticalStackLayout Background="{Binding Milestone.Color}" ToolTipProperties.Text="{Binding Milestone.Notes}">
            <Label Text="{Binding Milestone.Title}" HorizontalOptions="Start" FontAttributes="Bold" FontSize="12"/>
            <Label Text="{Binding Milestone.Deadline, StringFormat='{0:yyyy-MM-dd}'}" HorizontalOptions="Start" FontSize="10" />
            
        </VerticalStackLayout>-->
    </Border>
</ContentView>
