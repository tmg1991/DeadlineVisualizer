<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeadlineVisualizer.MainPage"
             xmlns:res="clr-namespace:DeadlineVisualizer.Resources">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <VerticalStackLayout Spacing="15">
            <Button Text="{x:Static res:AppRes.NewFileButtonText}" Command="{Binding NewFileCommand}"/>
            <Button Text="{x:Static res:AppRes.OpenFileButtonText}" Command="{Binding OpenFileCommand}"/>
            <Button Text="{x:Static res:AppRes.SaveFileButtonText}" Command="{Binding SaveFileCommand}"/>
            <Button Text="+" Command="{Binding AddMilestoneCommand}" WidthRequest="50" HeightRequest="50" Margin="30" CornerRadius="200"/>
        </VerticalStackLayout>
    </Grid>
    

</ContentPage>
